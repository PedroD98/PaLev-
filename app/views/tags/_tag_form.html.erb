<%= form_with model: @tag do |f| %>
  <% if @tag.errors.any? %>
    <div>
      <h2>Marcador não pôde ser cadastrado:</h2>
      <ul>
        <% @tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="tag_name">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <br />
    <%= f.submit 'Enviar', class: 'bg-gray-100 px-4 py-2 rounded hover:bg-gray-200' %>
  </div>

<% end %>